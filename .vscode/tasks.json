{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Lefordítás GTK 3.18-cal",
            "command": "cargo",
            "args": [
                "build",
                "--features",
                "gtk_3_18"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Futtatás GTK 3.18-cal",
            "command": "cargo",
            "args": [
                "run",
                "--features",
                "gtk_3_18"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}